<div class="container">

  <!-- Display the banner only when the user is logged in -->
  <% if user_signed_in? == false %>
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <div class="banner">
          <div class="banner-content">
            <h1>Remove your newsfeed bias</h1>
            <h2>Choose content that is not defined by Facebook's algorithm.</h2>
            <form action="" class="banner-wagon-search">
              <input type="text" class="banner-wagon-search-input" placeholder="What are you interested in?">
              <button type="submit" class="banner-wagon-search-btn">
                <i class="fa fa-search"></i>
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Display the index of articles -->
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <%= render template: "articles/index" %>
    </div>
  </div>
</div>


