<!-- Form to be filled in to sign in to an existing account -->
<div class="container padded-top body-container">
  <div class="row">
    <div class="col-xs-10 col-sm-6 col-xs-offset-1 col-sm-offset-3">
      <div class="form-content">
        <!-- Give the user the option to sign in with Facebook -->
        <%= link_to "Log in with Facebook", omniauth_authorize_path(:user, :facebook), class: "btn-facebook btn-form" %>
        <!-- A nice break between the two options -->
        <div class="padded-top-bottom text-center padded-top">
          <p>or</p>
        </div>
        <!-- Or they can sign in with their email, etc. -->
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true, placeholder: "Email Address", label: false %>
            <%= f.input :password, required: false, placeholder: "Password", label: false %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn-facebook btn-form btn-form-unpolarise" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

